<h1>New Event</h1>
<%= form_with scope: :event, url: events_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :start_time %><br>
    <%= form.text_field :start_time %>
  </p>

  <p>
    <%= form.label :end_time %><br>
    <%= form.text_field :end_time %>
  </p>

  <p>
    <%= form.label :start_timezone %><br>
    <%= form.text_field :start_timezone %>
  </p>

  <p>
    <%= form.label :end_timezone %><br>
    <%= form.text_field :end_timezone %>
  </p>

  <p>
    <%= form.label :currency %><br>
    <%= form.text_field :currency %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>